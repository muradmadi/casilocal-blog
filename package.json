{
  "name": "casilocal-blog",
  "version": "1.0.0",
  "description": "CasiLocal blog for students in Madrid",
  "scripts": {
    "start": "npm run build && http-server public -p 8080 -a 0.0.0.0",
    "dev": "npm run build && live-server public --port=8080 --host=0.0.0.0 --open=/",
    "build": "node build.js",
    "build:watch": "nodemon --watch content/blog --ext md --exec \"npm run build\""
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.2"
  }
}

